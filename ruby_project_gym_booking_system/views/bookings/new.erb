<h1>Make a new booking</h1>

<form method="POST" action="/bookings">
    <p>
        <label for="member_name">Select a Member: </label>
        <select name="member_id" id="member_name">
            <% @members.each do |member| %>
                <option value=<%=member.id%>><%=member.pretty_name()%></option>
            <% end %>
        </select>
    </p>

    <p>
        <label for="lesson_name">Select a Lesson: </label>
        <select name="lesson_id" id="lesson_name">
            <% @lessons.each do |lesson| %>
                <option value=<%=lesson.id%>><%=lesson.lesson_name%></option>
            <% end %>
        </select>
    </p>

    <p>
        <input type="submit" value="Make Booking" />
    </p>
</form>