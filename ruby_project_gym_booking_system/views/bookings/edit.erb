<h1>Edit Booking <%=@booking.id%></h1>

<form method="POST" action="/bookings/<%=@booking.id%>">
    <p>
        <label for="member_name">Select a Member: </label>
        <select name="member_id" id="member_name">
            <% @members.each do |member| %>
                <% if member.id == @booking.member_id %>
                    <option value=<%=member.id%> selected><%=member.pretty_name()%></option>
                <% else %>
                    <option value=<%=member.id%>><%=member.pretty_name()%></option>
                <% end %>
            <% end %>
        </select>
    </p>

    <p>
        <label for="lesson_name">Select a Lesson: </label>
        <select name="lesson_id" id="lesson_name">
            <% @lessons.each do |lesson| %>
                <% if lesson.id == @booking.lesson_id %>
                    <option value=<%=lesson.id%> selected><%=lesson.lesson_name%></option>
                <% else %>
                    <option value=<%=lesson.id%> ><%=lesson.lesson_name%></option>
                <% end %>
            <% end %>
        </select>
    </p>


    <p>
        <input type="submit" value="Update Booking" />
    </p>
</form>