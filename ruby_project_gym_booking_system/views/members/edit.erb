<h1>Edit <%= @member.pretty_name()%>'s Details</h1>

<form method="POST" action="/members/<%=@member.id%>">
    <p>
        <label for="first_name"> First Name:</label>
        <input type="text" name="first_name" id="first_name" value="<%=@member.first_name%>"/>
    </p>

    <p> 
        <label for="last_name"> Last Name:</label>
        <input type="text" name="last_name" id="last_name" value="<%= @member.last_name%>"/>
    </p>

    <p>
        <label for="date_of_birth"> Date of Birth:</label>
        <input type="text" name="date_of_birth" id="date_of_birth" value="<%= @member.date_of_birth%>"/>
    </p>

    <p>
        <input type="submit" value="Update Member's Details"/>
    </p>
</form>